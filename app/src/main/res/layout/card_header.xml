<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/headerItemLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="12dp"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/itemCardView"
        style="@style/card_style_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|start">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start|center_vertical"
            android:minHeight="40dp"
            android:orientation="horizontal"
            android:paddingHorizontal="4dp"
            android:paddingVertical="8dp">

            <TextView
                android:id="@+id/sistholicListItemView"
                style="@style/text_view_style_default"
                android:layout_width="wrap_content"
                android:gravity="start|center_vertical"
                android:minWidth="40dp"
                android:paddingHorizontal="2dp"
                android:textSize="@dimen/font_size_normal"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/slashListItemView"
                style="@style/text_view_style_default"
                android:layout_width="wrap_content"
                android:gravity="start|center_vertical"
                android:lines="1"
                android:paddingHorizontal="2dp"
                android:text="@string/slash"
                android:textSize="@dimen/font_size_normal"
                android:textStyle="bold"
                android:typeface="sans" />

            <TextView
                android:id="@+id/diastholicListItemView"
                style="@style/text_view_style_default"
                android:layout_width="wrap_content"
                android:gravity="start|center_vertical"
                android:minWidth="40dp"
                android:paddingHorizontal="2dp"
                android:textSize="@dimen/font_size_normal"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/readOnListItemView"
                style="@style/text_view_style_default"
                android:layout_width="wrap_content"
                android:gravity="start|center_vertical"
                android:paddingHorizontal="2dp"
                android:text="@string/read_on"
                android:textSize="@dimen/font_size_normal" />

            <TextView
                android:id="@+id/dateListItemView"
                style="@style/text_view_style_default"
                android:layout_width="wrap_content"
                android:gravity="start|center_vertical"
                android:minWidth="80dp"
                android:paddingHorizontal="2dp"
                android:textSize="@dimen/font_size_normal"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/colonListItemView"
                style="@style/text_view_style_default"
                android:layout_width="wrap_content"
                android:gravity="start|center_vertical"
                android:paddingHorizontal="2dp"
                android:text="@string/at"
                android:textSize="@dimen/font_size_normal"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/timeListItemView"
                style="@style/text_view_style_default"
                android:layout_width="wrap_content"
                android:gravity="start|center_vertical"
                android:minWidth="64dp"
                android:paddingHorizontal="2dp"
                android:textSize="@dimen/font_size_normal"
                android:textStyle="bold" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>