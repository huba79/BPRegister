<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/editLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/sistholicView"
            android:layout_width="@dimen/text_item_width"
            android:layout_height="@dimen/text_item_height"
            android:layout_marginHorizontal="@dimen/inner_item_margin_horiz_short"
            android:layout_marginVertical="@dimen/inner_item_margin_vert_short"
            android:layout_weight="3"
            android:text="TextView" />

        <TextView
            android:id="@+id/slashLabel"
            android:layout_width="0dp"
            android:layout_height="@dimen/text_item_height"
            android:layout_gravity="center"
            android:layout_margin="0dp"
            android:layout_marginHorizontal="@dimen/inner_item_margin_horiz_short"
            android:layout_marginVertical="@dimen/inner_item_margin_vert_short"
            android:layout_weight="1"
            android:gravity="center"
            android:lines="1"
            android:text="/"
            android:textStyle="bold"
            android:typeface="sans" />

        <TextView
            android:id="@+id/diastholicView"
            android:layout_width="@dimen/text_item_width"
            android:layout_height="@dimen/text_item_height"
            android:layout_marginHorizontal="@dimen/inner_item_margin_horiz_short"
            android:layout_marginVertical="@dimen/inner_item_margin_vert_short"
            android:layout_weight="3"
            android:text="TextView" />

        <TextView
            android:id="@+id/timestampView"
            android:layout_width="@dimen/text_item_width"
            android:layout_height="@dimen/text_item_height"
            android:layout_marginHorizontal="@dimen/inner_item_margin_horiz_short"
            android:layout_marginVertical="@dimen/inner_item_margin_vert_short"
            android:layout_weight="3"
            android:text="TextView" />

    </LinearLayout>

</LinearLayout>