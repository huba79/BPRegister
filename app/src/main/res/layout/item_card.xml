<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:scrollbarStyle="insideInset">

    <androidx.cardview.widget.CardView
        style="@style/card_style_default"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_gravity="bottom|start"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="bottom|start"
            android:minHeight="30dp"
            android:orientation="horizontal"
            android:paddingHorizontal="4dp">

            <TextView
                android:id="@+id/sistholicListItemView"
                style="@style/text_view_style_default"
                android:gravity="center_vertical"
                android:minWidth="32dp" />

            <TextView
                android:id="@+id/slashListItemView"
                style="@style/text_view_style_default"
                android:gravity="center_vertical"
                android:lines="1"
                android:text="@string/visual_separator"
                android:textStyle="bold"
                android:typeface="sans" />

            <TextView
                android:id="@+id/diastholicListItemView"
                style="@style/text_view_style_default"
                android:gravity="bottom"
                android:minWidth="32dp" />

            <TextView
                android:id="@+id/atListItemView"
                style="@style/text_view_style_default"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/at" />

            <TextView
                android:id="@+id/dateListItemView"
                style="@style/text_view_style_default"
                android:minWidth="80dp" />

            <TextView
                android:id="@+id/colonListItemView"
                style="@style/text_view_style_default"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/colon" />

            <TextView
                android:id="@+id/timeListItemView"
                style="@style/text_view_style_default"
                android:layout_height="wrap_content"
                android:minWidth="64dp" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>