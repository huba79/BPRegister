<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal|center_vertical"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/greetingsView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/text_item_height"
        android:layout_marginHorizontal="@dimen/card_margin_horiz"
        android:layout_marginVertical="@dimen/card_margin_vert"
        android:layout_weight="1"
        android:gravity="center|center_vertical"
        android:text="@string/greeting_message"
        android:textSize="24sp" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/card_margin_horiz"
        android:layout_marginVertical="@dimen/card_margin_vert"
        android:layout_weight="1"
        android:paddingHorizontal="@dimen/card_padding_horiz"
        android:paddingVertical="@dimen/card_padding_vert">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/cardTitleWiew2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/text_item_height"
                android:layout_marginHorizontal="@dimen/card_margin_horiz"
                android:layout_marginVertical="@dimen/card_margin_vert"
                android:gravity="center"
                android:text="@string/registration_card_title"
                android:textSize="18sp"
                android:typeface="sans" />

            <LinearLayout
                android:id="@+id/labelLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/sistolicLabel"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/text_item_height"
                    android:layout_marginHorizontal="@dimen/text_item_margin_horiz"
                    android:layout_marginVertical="@dimen/text_item_margin_vert"
                    android:layout_weight="1"
                    android:gravity="start|center_vertical"
                    android:paddingHorizontal="@dimen/text_item_padding_horiz"
                    android:text="@string/label_sistholic"
                    android:textSize="16sp"
                    android:typeface="sans" />

                <TextView
                    android:id="@+id/diastholicLabel"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/text_item_height"
                    android:layout_marginHorizontal="@dimen/text_item_margin_horiz"
                    android:layout_marginVertical="@dimen/text_item_margin_vert"
                    android:layout_weight="1"
                    android:gravity="right|center_vertical"
                    android:paddingHorizontal="@dimen/text_item_padding_horiz"
                    android:text="@string/label_diastholic"
                    android:textSize="16sp"
                    android:typeface="sans" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/editLayout"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/sistolicEdit"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/text_item_height"
                    android:layout_marginHorizontal="@dimen/text_item_margin_horiz"
                    android:layout_marginVertical="@dimen/text_item_margin_vert"
                    android:layout_weight="3"
                    android:ems="10"
                    android:gravity="center"
                    android:inputType="number"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:typeface="sans" />

                <TextView
                    android:id="@+id/slashLabel"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/text_item_height"
                    android:layout_gravity="center"
                    android:layout_margin="0dp"
                    android:layout_marginHorizontal="@dimen/text_item_margin_horiz"
                    android:layout_marginVertical="@dimen/text_item_margin_vert"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:lines="1"
                    android:text="/"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:typeface="sans" />

                <EditText
                    android:id="@+id/diastholicEdit"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/text_item_height"
                    android:layout_marginHorizontal="@dimen/text_item_margin_horiz"
                    android:layout_marginVertical="@dimen/text_item_margin_vert"
                    android:layout_weight="3"
                    android:ems="10"
                    android:gravity="center"
                    android:inputType="number"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:typeface="sans" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/datePickerLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/selectedDateView"
                    android:layout_width="@dimen/text_item_width"
                    android:layout_height="@dimen/text_item_height"
                    android:layout_gravity="start|center_vertical"
                    android:layout_marginHorizontal="@dimen/text_item_margin_horiz"
                    android:layout_marginVertical="@dimen/text_item_margin_vert"
                    android:layout_weight="1"
                    android:gravity="center" />

                <Button
                    android:id="@+id/datePickerButton"
                    android:layout_width="@dimen/text_item_width"
                    android:layout_height="@dimen/text_item_height"
                    android:layout_weight="1"
                    android:background="@drawable/button_borders"
                    android:text="@string/datte_picker_button_text" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/timePickerLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/selectedTimeView"
                    android:layout_width="@dimen/text_item_width"
                    android:layout_height="@dimen/text_item_height"
                    android:layout_marginHorizontal="@dimen/text_item_margin_horiz"
                    android:layout_marginVertical="@dimen/text_item_margin_vert"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="TextView" />

                <Button
                    android:id="@+id/timePickerButton"
                    android:layout_width="@dimen/text_item_width"
                    android:layout_height="@dimen/text_item_height"
                    android:layout_marginHorizontal="@dimen/text_item_margin_horiz"
                    android:layout_marginVertical="@dimen/text_item_margin_vert"
                    android:layout_weight="1"
                    android:background="@drawable/button_borders"
                    android:gravity="center"
                    android:text="@string/time_picker_button" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/buttonsLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/saveButton"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_marginHorizontal="@dimen/card_margin_horiz"
                    android:layout_marginVertical="36dp"
                    android:background="@drawable/button_borders"
                    android:gravity="center"
                    android:text="@string/button_save"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:typeface="sans" />

            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <ImageButton
        android:id="@+id/searchButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginHorizontal="@dimen/card_margin_horiz"
        android:layout_marginVertical="@dimen/card_margin_vert"
        android:layout_weight="1"
        android:src="@android:drawable/ic_menu_zoom" />

    <Button
        android:id="@+id/exitButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginHorizontal="@dimen/card_margin_horiz"
        android:layout_marginVertical="@dimen/card_margin_vert"
        android:layout_weight="1"
        android:background="@drawable/button_borders"
        android:text="@string/button_exit" />

</LinearLayout>