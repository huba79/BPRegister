<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.BPRegister" parent="Theme.Material3.DayNight">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/bp_primary</item>
        <item name="colorPrimaryVariant">@color/bp_primary_variant</item>
        <item name="colorOnPrimary">@color/bp_text_on_primary</item>
        <item name="colorSecondary">@color/bp_seconday</item>
        <item name="colorSecondaryVariant">@color/bp_secondary_variant</item>
        <item name="colorOnSecondary">@color/bp_color_on_secondary</item>
        <item name="colorSurface">@color/bp_surface</item>
        <item name="colorOnSurface">@color/bp_text_on_surface</item>
        <item name="colorBackgroundFloating">@color/bp_background</item>
        <item name="colorOnBackground">@color/bp_text_on_background</item>
        <item name="colorError">@color/bp_error</item>
        <item name="colorOnError">@color/bp_textOnError</item>
    </style>

    <style name="Theme.BPRegister" parent="Base.Theme.BPRegister" />

    <style name="Theme.BPRegister.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.BPRegister.AppBarOverlay" parent="ThemeOverlay.Material3.BottomAppBar" />

    <style name="Theme.BPRegister.PopupOverlay" parent="ThemeOverlay.Material3.Light" />
</resources>