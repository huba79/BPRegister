<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="button_style_default">
        <item name="android:layout_width">wrap_content</item>
<!--        <item name="android:background">@drawable/button_borders</item>-->
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="cornerRadius">8dp</item>
        <item name="rippleColor">#33AAAAAA</item>
        <item name="strokeColor">@color/material_dynamic_secondary80</item>
        <item name="strokeWidth">1dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center|center_horizontal</item>
        <item name="android:layout_marginHorizontal">@dimen/inner_item_margin_horiz_short</item>
        <item name="android:layout_marginVertical">@dimen/input_card_margin_vert</item>
        <item name="android:paddingHorizontal">@dimen/text_item_padding_horiz</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">@dimen/font_size_small</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text_view_style_default">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">4dp</item>
        <item name="android:layout_marginVertical">4dp</item>
        <item name="android:paddingHorizontal">4dp</item>
        <item name="android:paddingVertical">4dp</item>
        <item name="android:textSize">@dimen/font_size_smallest</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="footer_style_default">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxHeight">@dimen/footer_maximum_height</item>
        <item name="android:minHeight">@dimen/footer_min_height</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
    </style>
    <style name="layout_line_style_default">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxHeight">@dimen/line_max_height</item>
        <item name="android:minHeight">@dimen/line_min_height</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="card_style_default">
        <item name="android:background">@color/cardBg</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginHorizontal">@dimen/input_card_margin_horiz</item>
        <item name="android:layout_marginVertical">@dimen/input_card_margin_vert</item>
        <item name="android:paddingHorizontal">@dimen/input_card_padding_horiz</item>
        <item name="android:paddingVertical">@dimen/input_card_padding_vert</item>
        <item name="cardElevation">4dp</item>
        <item name="cardCornerRadius">@dimen/card_large_corner_radius</item>
    </style>

    <style name="card_style_list_header">
<!--        <item name="cardBackgroundColor">@color/material_dynamic_primary20</item>-->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginHorizontal">@dimen/list_header_card_margin_horiz</item>
        <item name="android:layout_marginVertical">@dimen/list_header_card_margin_vert</item>
        <item name="android:paddingHorizontal">@dimen/list_header_card_padding_horiz</item>
        <item name="android:paddingVertical">@dimen/list_header_card_padding_vert</item>
        <item name="elevation">4dp</item>
        <item name="cornerRadius">4dp</item>
    </style>

    <style name="card_style_list">
<!--        <item name="cardBackgroundColor">@color/material_dynamic_neutral60</item>-->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginHorizontal">@dimen/list_item_card_margin_horiz</item>
        <item name="android:layout_marginVertical">@dimen/list_item_card_margin_vert</item>
        <item name="android:paddingHorizontal">@dimen/list_item_card_padding_horiz</item>
        <item name="android:paddingVertical">@dimen/list_item_card_padding_vert</item>
        <item name="elevation">4dp</item>
        <item name="cornerRadius">4dp</item>
    </style>

    <style name="inline_separator_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
<!--        <item name="android:layout_marginHorizontal">@dimen/text_item_margin_horiz</item>-->
        <item name="android:layout_marginVertical">@dimen/text_item_margin_vert</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:includeFontPadding">true</item>
        <item name="android:lines">1</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:typeface">sans</item>
    </style>

